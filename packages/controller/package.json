{
  "name": "@konami-lit/controller",
  "version": "0.1.0",
  "private": true,
  "description": "Reactive controller for detecting Konami code and custom input sequences",
  "type": "module",
  "author": "David Robinson",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
