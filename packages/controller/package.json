    "lit": "^3.0.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.8",
    "happy-dom": "^20.0.10",
    "lit": "^3.0.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.8"
  }
